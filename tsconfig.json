{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": false,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "server/dist",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "lib": ["ES2015", "es7"],
  "include": ["./server"],
  "exclude": ["node_modules", "pages", "public", "styles"]
}
